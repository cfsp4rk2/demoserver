        <div>
            <input id="searchBox" type="text" placeholder="Enter Search Here">
            <button id="searchButton">Search</button>
        </div>
    </div>

    <% if (query != "") { %>
    <div id="results">
        <% if (results.length === 0) { %>
        <h4>No results found related to: <i><%- query %></i></h4>
        <% } else { %>
        <h4>Results related to: <i><%- query %></i></h4>
        <ul>
            <% for (result of results) { %>
            <li><a href="#"><%= result %></a></li>
            <% } %>
        </ul>
        <% } %>
    </div>
    <% } %>

</section>

