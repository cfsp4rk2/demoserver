<%- include('../global/top.ejs'); %>

<div class="container" style="height: 100vh; display: flex; align-items: center;">
    <div class="row" style="width: 100%">
        <div class="col-sm-4 col-sm-offset-4">
            <h1>Create Account</h1>
            <form data-cf-form="register">
                <div class="form-group">
                    <label for="firstName" style="display: inline-block">First Name</label>
                    <input id="firstName" class="form-control" type="text" name="firstName"/>
                </div>
                <div class="form-group">
                    <label for="lastName" style="display: inline-block">Last Name</label>
                    <input id="lastName" class="form-control" type="text" name="lastName"/>
                </div>
                <div class="form-group">
                    <label for="email" style="display: inline-block">Email</label>
                    <input id="email" class="form-control" type="email" name="email"/>
                </div>
                <div class="form-group">
                    <label for="password" style="display: inline-block">Password</label>
                    <input id="password" class="form-control" type="password" name="password"/>
                </div>
                <div class="form-group">
                    <label for="passwordConfirm" style="display: inline-block">Confirm Password</label>
                    <input id="passwordConfirm" class="form-control" type="password" name="passwordConfirm"/>
                </div>
                <button type="submit" class="btn btn-primary btn-block" data-cf-form="submit">Sign Up</button>
                <div class="alert alert-danger" role="alert" style="margin-top: 20px; display: none" data-form-error></div>
            </form>
            <p><a href="/login">Sign In</a></p>
        </div>
    </div>
</div>

<%- include('../global/bottom.ejs'); %>